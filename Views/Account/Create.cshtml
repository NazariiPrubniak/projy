@model Wrap.Model.Account

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Acoount</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Create", "Account"))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.SurName)
                @Html.TextBoxFor(model => model.SurName, new { required = "required" })
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Name)
                @Html.TextBoxFor(model => model.Name, new { required = "required" })
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Email)
                @Html.TextBoxFor(model => model.Email, new { required = "required" })
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
